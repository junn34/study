#include <iostream>
using namespace std;
int LSearch(int arr[],int len, int target) 
{
	int i;
	for (i = 0; i < len; i++)
	{
		if (arr[i] == target)
			return i;

	}
	return -1;

}

int main(void) {
	int arr[] = { 3,5,7,4,9 };
	int idx;
	idx = LSearch(arr, sizeof(arr) / sizeof(int), 4);
	if (idx == -1)
		cout << "탐색 실패 \n";
	else
		cout<<"타겟 저장 인덱스: " << idx << "\n";

	idx = LSearch(arr, sizeof(arr) / sizeof(int), 59);
	if (idx == -1)
		cout << "탐색 실패 \n";
	else
		cout << "타겟 저장 인덱스: " << idx << "\n";

	return 0;
		
}
